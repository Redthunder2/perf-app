@model IEnumerable<perfumeApp.Models.ParkingSpace>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("Create New Space","Create",new { @area = "" },new { @class="btn btn-success"})

<table class="table table-bordered table-striped-columns table-primary mt-4">
    <tr>
        <td>@Html.DisplayName("Parking Name")</td>
        <td>@Html.DisplayNameFor(m => m.Address)</td>
        <td>@Html.DisplayNameFor(m => m.Current_Capacity)</td>
        <td>@Html.DisplayNameFor(m => m.Max_Capacity)</td>
        <td></td>
    </tr>

    @{
        foreach (var p in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => p.ParkingSpace_Name)</td>
            <td>@Html.DisplayFor(modelItem => p.Address)</td>
            <td>@Html.DisplayFor(modelItem => p.Current_Capacity)</td>
            <td>@Html.DisplayFor(modelItem => p.Max_Capacity)</td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { area = "" , id = p.ParkingSpace_Name }, new { @class = "btn btn-danger" })
                @Html.ActionLink("Edit", "Edit", new { area = "" ,id= p.ParkingSpace_Name }, new { @class = "btn btn-warning" })
            </td>
        </tr>
                }
}

           
</table>

