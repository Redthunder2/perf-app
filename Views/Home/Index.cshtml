@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Video Chat App</h1>
    <p>A simple video and text chat application built with ASP.NET Core and SignalR</p>
    
    <div class="mt-5">
        <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="Chat">Start Chatting</a>
    </div>
    
    <div class="mt-4">
        <div class="row">
            <div class="col-md-4">
                <h3>Real-time Messaging</h3>
                <p>Send and receive messages instantly with other users in the chat room.</p>
            </div>
            <div class="col-md-4">
                <h3>Video Calls</h3>
                <p>Connect face-to-face with other users through peer-to-peer video calls.</p>
            </div>
            <div class="col-md-4">
                <h3>Easy to Use</h3>
                <p>Simple, intuitive interface that works on all modern browsers.</p>
            </div>
        </div>
    </div>
</div>